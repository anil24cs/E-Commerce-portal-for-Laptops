@model IEnumerable<DigitalRetailersLaptop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <!-- <div class="p-2 mb-4 bg-light rounded-3"> -->
    <div class="container-fluid py-2">
        <div class="card">
            

                <a asp-action="Create" class="bg-dark text-warning btn btn-lg btn-outline-light">Create New</a>


                <table class="table bg-dark text-white">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary m-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light m-1">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger m-1"> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
       
